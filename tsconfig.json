{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                          
    "allowJs": true,                             
    "checkJs": true,                           
    "outDir": "./build",                                                      
    "strict": true,                                                          
    "esModuleInterop": true,           
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true
  },  
  "exclude": ["node_modules", "**/__tests__/*"]
}
